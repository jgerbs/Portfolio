@model BlogApp.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h2>@ViewData["Title"]</h2>
<br />

@* Show success from Forgot Password *@
@if (TempData["ResetEmailSent"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["ResetEmailSent"]
    </div>
}

@* Show success after confirming email *@
@if (TempData["EmailConfirmed"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["EmailConfirmed"]
    </div>
}

@* Show success after password reset *@
@if (TempData["ResetSuccess"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["ResetSuccess"]
    </div>
}

@* Display login-related errors *@
@if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
{
    <div class="alert alert-danger mt-3">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }

        @* If the issue is unconfirmed email, show resend button *@
        @if (ViewData.ModelState.Values.SelectMany(v => v.Errors)
            .Any(e => e.ErrorMessage.Contains("confirm your email")))
        {
            <hr />

            <form asp-action="ResendConfirmationEmail" method="post" class="d-inline">
                <input type="hidden" name="email" value="@Model.Email" />
                <button class="btn btn-sm btn-outline-primary">
                    Resend Confirmation Email
                </button>
            </form>
        }
    </div>
}

<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" 
               value="@Model.Email" required />
    </div>

    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="Password" name="Password" required />
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Login</button>
    <a asp-action="ForgotPassword" class="btn btn-link">Forgot Password?</a>
</form>
