@model BlogApp.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
}

@* Show validation errors *@
@if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
{
    <div class="alert alert-danger mt-3">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }

        @* Duplicate email handling *@
        @if (ViewBag.DuplicateEmail == true)
        {
            <hr />
            @if (ViewBag.EmailConfirmed == false)
            {
                <div class="mt-2">
                    <strong>Your account is not yet confirmed.</strong><br />
                    Please check your email for the confirmation link.
                    <br /><br />
                    <form asp-action="ResendConfirmationEmail" method="post" class="d-inline">
                        <input type="hidden" name="email" value="@Model.Email" />
                        <button class="btn btn-outline-primary btn-sm">Resend Confirmation</button>
                    </form>
                </div>
            }
            else
            {
                <div class="mt-2">
                    <strong>An account with this email already exists.</strong><br />
                    You can log in below:
                    <br /><br />
                    <a asp-action="Login" class="btn btn-outline-dark btn-sm">Log In</a>
                </div>
            }
        }
    </div>
}

@* DISPLAY ONLY REGISTRATION-SPECIFIC ERRORS *@
@if (TempData["RegisterError"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["RegisterError"]</div>
}

@* SUCCESSFUL REGISTRATION MESSAGE *@
@if (TempData["RegisterSuccess"] != null)
{
    var email = TempData["RegisterSuccess"] as string;

    <div class="alert alert-success mt-3">
        <strong>Account Created!</strong><br />
        A confirmation email has been sent to:
        <strong>@email</strong><br /><br />

        Please confirm your account before signing in.<br /><br />

        <form asp-action="ResendConfirmationEmail" method="post" class="d-inline">
            <input type="hidden" name="email" value="@email" />
            <button class="btn btn-secondary btn-sm">Resend Confirmation Email</button>
        </form>
    </div>
}

<h2>Create Account</h2>
<br />

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Register</button>
</form>
