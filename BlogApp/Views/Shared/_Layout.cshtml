@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jack's Blog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- MATRIX THEME NAVBAR -->
        <nav class="navbar navbar-expand-lg navbar-dark cyber-nav shadow-sm">
            <div class="container-fluid">

                <!-- LOGO + TITLE -->
                <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
                    <img src="~/images/logo5.png" alt="Jack's Blog Logo" class="nav-logo me-3" asp-append-version="true" />
                    <span class="nav-title">Jack’s Blog</span>
                </a>

                <!-- TOGGLER -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav"
                        aria-controls="navbarNav"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- LINKS + CREATE BUTTON -->
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            var userRoles = await UserManager.GetRolesAsync(currentUser);

                            if (userRoles.Contains("Contributor") || userRoles.Contains("Admin"))
                            {
                                <li class="nav-item me-3">
                                    <a href="@Url.Action("Create", "Article")" class="btn btn-primary nav-btn">
                                        Create Article
                                    </a>
                                </li>
                            }
                        }

                        <!-- Auth Links -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (ViewBag.IsAdmin != null && (bool)ViewBag.IsAdmin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("ManageUsers", "Account")">Manage Accounts</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Logout", "Account")">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Login", "Account")">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Register", "Account")">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto text-center text-muted py-4">
        <div class="footer-icons mb-3">
            <a href="https://jgerbs.github.io/Portfolio/" target="_blank" title="Portfolio">
                <img src="https://cdn.jsdelivr.net/gh/simple-icons/simple-icons/icons/html5.svg" alt="Portfolio" />
            </a>
            <a href="https://github.com/jgerbs/Portfolio" target="_blank" title="GitHub">
                <img src="https://cdn.jsdelivr.net/gh/simple-icons/simple-icons/icons/github.svg" alt="GitHub" />
            </a>
            <a href="https://www.linkedin.com/in/jack-gerber-4840ab1b1/" target="_blank" title="LinkedIn">
                <img src="https://cdn.jsdelivr.net/gh/simple-icons/simple-icons/icons/linkedin.svg" alt="LinkedIn" />
            </a>
        </div>

        <p>&copy; @DateTime.Now.Year Jack Gerber — All Rights Reserved</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
